/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0;
  box-sizing: border-box;
} 
.section {
  margin-bottom: 30rpx;
}
.section-group {
  border-bottom: solid 3rpx;
  margin-bottom: 5rpx;
  display: flex;
  flex-direction: row; 
}
.mcontainer {
  padding: 0rpx 60rpx;
}
.flex-item {
  height: 100rpx;
}
label {
   height: 80rpx; 
   line-height: 80rpx;
   vertical-align: center;
   text-align: justify;
   width: 180rpx;
}
input, picker {
  height: 80rpx; 
  line-height: 80rpx; 
  padding-left: 20rpx; 
}
button {
  margin-bottom: 30rpx;
}